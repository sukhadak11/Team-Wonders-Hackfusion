<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Social Media Platform</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Welcome to our Social Media Platform</h1>
            <nav>
                <ul>
                    <li><a href="#profile">Profile</a></li>
                    <li><a href="#upload-post">Upload Post</a></li>
                    <li><a href="#messages">Messages</a></li>
                    <li><a href="/logout">Logout</a></li>
                </ul>
            </nav>
        </header>

        <section id="profile">
            <h2>User Profile</h2>
            <!-- Display user profile information here -->
        </section>

        <section id="upload-post">
            <h2>Upload Post</h2>
            <form id="post-form">
                <textarea id="post-content" placeholder="Write your post here..." required></textarea>
                <button type="submit">Upload</button>
            </form>
        </section>

        <section id="messages">
            <h2>Messages</h2>
            <!-- Display posts from other users here -->
        </section>
    </div>

    <script src="/main.js"></script>
</body>
</html>
